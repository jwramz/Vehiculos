@model AIVA.Web.ViewModels.VendedorViewModel

@{
    ViewBag.Title = "Vendedores";
}

<div>
    <div class="col-12">
        <em>@ViewBag.Title</em>
    </div>
</div>

<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <div class="row">
                    <div class="col-12 text-right">
                        @Html.ActionLink("Agregar nuevo vendedor", "Create", "Vendedor", new { }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive table-hover table-striped ">
                <table class="table data-table-base">
                    <thead>
                        <tr>
                            <th class="text-left">
                                Nombre
                            </th>
                            <th class="text-left">
                                Teléfono
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listaVendedores)
                        {
                            <tr>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NoTelefono)
                                </td>

                                <td class="text-left">

                                    @Html.ActionLink("Editar", "Edit", "Vendedor", new { id = item.id }, new { @class = "btn btn-primary" })
                                    <a class="btn btn-outline-danger" id="eliminarEquipoBtn" onclick="eliminarEquipo('@item.id');">Eliminar </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>



</div>



<div class="modal fade" id="Delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <input type="hidden" name="Id_Equipo" id="Id_Equipo" value="" />

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Mensaje del sistema</h4>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-lg-12">
                    ¿Está seguro de eliminar el equipo seleccionado?
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="eliminarEquipoBtn" class="btn btn-green-olive">Aceptar</button>
                <button class="btn btn-green-turquise" type="button" data-dismiss="modal">Cancelar</button>

            </div>
        </div>
    </div>
</div>

