@model AIVA.Web.ViewModels.VehiculoViewModel

@{
    ViewBag.Title = "Bitácora";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Bitácora</h1>
            </div>
        </div>
    </div>
</section>


<div class="card">
    <div class="card-header">
        <div class="card-title">
            Criterios de búsqueda
        </div>
    </div>
    <div class="card-body">

        <div class="form-group row date-picker-default" id="dtpFechaInicio">
            <label asp-for="FechaInicio" class="control-label col-md-2"></label>
            <div class="col-md-2">
                <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" class="form-control" readonly name="@Html.NameFor(model => model.FechaInicio)" value="@Html.Raw(Model.FechaInicio != null ? Model.FechaInicio.ToString("dd/MM/yyyy") : "")" />
                </div>
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row date-picker-default" id="dtpFechaTermino">
            <label asp-for="FechaTermino" class="control-label col-md-2"></label>
            <div class="col-md-2">
                <div class="input-group date">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <input type="text" class="form-control" readonly name="@Html.NameFor(model => model.FechaTermino)" value="@Html.Raw(Model.FechaTermino != null ? Model.FechaTermino.ToString("dd/MM/yyyy") : "")" />
                </div>
                <span asp-validation-for="FechaTermino" class="text-danger"></span>
            </div>

        </div>

    </div>
</div>



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-8"> <h3 class="card-title">Listado de vehículos registrados</h3></div>
                </div>

            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-striped table-bordered DataTableDefaultExportButtons" id="tlbVariable">
                    <thead>
                        <tr>
                            <th class="text-center">Id</th>
                            <th class="text-center">Fecha</th>
                            <th class="text-center">Debe</th>
                            <th class="text-center">Comprador</th>
                            <th class="text-center">Vendedor</th>
                            <th class="text-center">Marca</th>
                            <th class="text-center">Submarca</th>
                            <th class="text-center">Modelo</th>
                            <th class="text-center">Lugar</th>
                            <th class="text-center">No. Serie</th>
                            <th class="text-center">No. Motor</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listaVehiculos)
                        {

                            DateTime fecha = (DateTime)item.FechaRegistro;
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td class="text-left">
                                @fecha.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-left">
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.Comprador.Nombre)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.Vendedor.Nombre)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.MarcaVehiculo.Descripcion)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.SubMarcaVehiculo.Descripcion)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.AnioModeloVehiculo.Descripcion)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.Oficina.Descripcion)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.NoSerie)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.NoMotor)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Consultar datos", "Edit", "Cliente", new { id = item.id }, new { @class = "btn btn-success" })
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

<br />
<br />
<br />


@section Styles {
    <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/datepicker3.css" />
    <link rel="stylesheet" href="~/css/Comunes.css" />
}

@section Scripts {
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/js/Comunes.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            window.addEventListener('keydown', function (e) {
                if (e.keyIdentifier == 'U+000A' || e.keyIdentifier == 'Enter' || e.keyCode == 13) {
                    if (e.target.nodeName == 'INPUT' && e.target.type == 'text') {
                        e.preventDefault();
                        return false;
                    }
                }
            }, true);

            InicializarDataTableDefaultBotonesExportar('Datos del sistema');
            InicializarDatePickerDefault();
        });



    </script>
}
