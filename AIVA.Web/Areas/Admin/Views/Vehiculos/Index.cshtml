@model AIVA.Web.ViewModels.VehiculoViewModel

@{
    ViewBag.Title = "Bitácora";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Bitácora</h1>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-8"> <h3 class="card-title">Listado de vehículos registrados</h3></div>
                </div>

            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-striped table-bordered DataTableDefaultExportButtons" id="tlbVariable">
                    <thead>
                        <tr>
                            <th class="text-center" width="10%">Id</th>
                            <th class="text-center" width="30%">Fecha</th>
                            <th class="text-center" width="30%">No. Serie</th>
                            <th class="text-center" width="30%">No. Placa</th>
                            <th class="text-center" width="20%">No. Motor</th>
                            <th class="text-center" width="20%">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listaVehiculos)
                        {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.FechaRegistro)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.NoSerie)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.NoPlaca)
                            </td>
                            <td class="text-left">
                                @Html.DisplayFor(modelItem => item.NoMotor)
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Consultar datos", "Edit", "Cliente", new { id = item.id }, new { @class = "btn btn-success" })
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

<br />
<br />
<br />


@section Styles {
    <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
}

@section Scripts {
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/Comunes.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            InicializarDataTableDefaultBotonesExportar('Datos del sistema');
        });

      

    </script>
}
