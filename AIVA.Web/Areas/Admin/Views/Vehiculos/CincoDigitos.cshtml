@model AIVA.Web.ViewModels.VehiculoViewModel

@{
    ViewBag.Title = "5 Dígitos";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>5 Dígitos</h1>
            </div>
        </div>
    </div>
</section>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-8"> <h3 class="card-title">Listado de vehículos registrados</h3></div>
                </div>

            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-striped table-bordered DataTableDefaultExportButtons" id="tlbVariable">
                    <thead>
                        <tr>
                            <th class="text-center">Id</th>
                            <th class="text-center">Base</th>
                            <th class="text-center">Placa</th>
                            <th class="text-center">Serie</th>
                            <th class="text-center">Observación</th>
                            <th class="text-center">Modus</th>
                            <th class="text-center">Averiguación</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.VehiculosReportados)
                        {
                            int id = item.id;

                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.id)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.Base)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NoPlaca)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NoSerie)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.Observaciones)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.ModusOperandi)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.Averiguacion)
                                </td>

                                <td class="text-center">
                                    <button class="btn btn-outline-secondary " type="button" onclick="EditBitacora('@id');"><i class="fa fa-paste"></i> Ver</button>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

<br />


<div class="card">
    <div class="card-header">

        <div class="card-title">
            Datos del vehículo
        </div>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label class="control-label col-md-2">Lugar:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.LugarReporte, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-2">RFV:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.RFV, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <label class="control-label col-md-2">Placa:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <label class="control-label col-md-2">Fecha:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.FechaRegistroReporte, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-2">No. Serie:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.NoSerie, new { htmlAttributes = new { @class = "form-control", @onchange = "validaSerie();" } })

            </div>
            <label class="control-label col-md-2">No. de Motor:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.NoMotor, new { @class = "form-control" })

            </div>
            <label class="control-label col-md-2">5 DIG:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.CincoDigitos, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-2">Marca:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control", @onchange = "validaSerie();" } })

            </div>
            <label class="control-label col-md-2">Modelo:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Modelo, new { @class = "form-control" })

            </div>
            <label class="control-label col-md-2">Violencia:</label>
            <div class="col-md-2">
                @Html.RadioButtonFor(model => model.Violencia, "1") @Html.Raw("Si")
                @Html.Raw("&nbsp;")
                @Html.RadioButtonFor(model => model.Violencia, "2")  @Html.Raw("No")

            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-2">Modus Operandi:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.ModusOperandi, new { htmlAttributes = new { @class = "form-control", @onchange = "validaSerie();" } })

            </div>
            <label class="control-label col-md-2">Base:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.BaseAveriguacion, new { @class = "form-control" })

            </div>
            <label class="control-label col-md-2">Averiguación:</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Averiguacion, new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-2">Observaciones:</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.ObservacionReporteRegistro, new { htmlAttributes = new { @class = "form-control", @onchange = "validaSerie();" } })

            </div>
            
        </div>

        
    </div>
</div>

<br />
<br />
<br />


@section Styles {
    <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/datepicker3.css" />
    <link rel="stylesheet" href="~/css/Comunes.css" />
}

@section Scripts {
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/js/Comunes.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            window.addEventListener('keydown', function (e) {
                if (e.keyIdentifier == 'U+000A' || e.keyIdentifier == 'Enter' || e.keyCode == 13) {
                    if (e.target.nodeName == 'INPUT' && e.target.type == 'text') {
                        e.preventDefault();
                        return false;
                    }
                }
            }, true);

            InicializarDataTableDefaultBotonesExportar('Datos del sistema');
            InicializarDatePickerDefault();
        });



    </script>
}
