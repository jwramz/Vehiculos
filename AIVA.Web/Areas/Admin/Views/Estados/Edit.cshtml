@model AIVA.Web.ViewModels.CatalogosViewModel

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Catálogos</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item active">Estados</li>
                <li class="breadcrumb-item active">Editar estado</li>
            </ol>
        </div>
    </div>
</div>


<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Datos del estado</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <form>
            @Html.ValidationSummary(false)
            @Html.HiddenFor(model => model.id, new { id = "idEstado" })
            <div class="form-group row">
                <label class="control-label col-md-4">Estado</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion)
                </div>
            </div>

            <br />

