@model AIVA.Web.ViewModels.CatalogosViewModel

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Catálogos</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item active">Marcas de autos</li>
                <li class="breadcrumb-item active">Editar registro</li>
            </ol>
        </div>
    </div>
</div>


<div class="card card-secondary">
    <div class="card-header">
        <h3 class="card-title">Datos del municipio</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id, new { id = "idModelo" })

        <form>
            @Html.ValidationSummary(false)

            <div class="form-group row">
                <label class="control-label col-md-4">Marca</label>
                <div class="col-md-4">
                    @Html.DropDownListFor(model => model.idMarcaAuto, Model.listaMarcasDDL, "Seleccione...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idMarcaAuto)
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-4">Modelo de auto</label>
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion)
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="offset-4 col-md-8">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                    @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </form>
        }

    </div>
    <!-- /.card-body -->
</div>
